<?xml version="1.0" encoding="utf-8"?>
<xs:schema id="TransferRecurring"
	targetNamespace="http://cufxstandards.com/v4/TransferRecurring.xsd"
	version="4.4.$Revision$"
	xmlns="http://cufxstandards.com/v4/TransferRecurring.xsd"
	xmlns:common="http://cufxstandards.com/v4/Common.xsd"
	xmlns:mstns="http://cufxstandards.com/v4/TransferRecurring.xsd"
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:fundsTransferRecurringBase="http://cufxstandards.com/v4/FundsTransferRecurringBase.xsd"

	elementFormDefault="qualified"
	attributeFormDefault="unqualified">

	<xs:import namespace="http://cufxstandards.com/v4/Common.xsd" schemaLocation="Common.xsd" />
	<xs:import namespace="http://cufxstandards.com/v4/FundsTransferRecurringBase.xsd" schemaLocation="FundsTransferRecurringBase.xsd" />

	<xs:element name="transferRecurringList" type="TransferRecurringList">
		<xs:annotation>
			<xs:documentation>
				List of recurring transfers returned from a data pull that was based on applied filters.
			</xs:documentation>
		</xs:annotation>
	</xs:element>

	<xs:complexType name="TransferRecurringList">
		<xs:annotation>
			<xs:documentation>
				List of recurring transfers returned from a data pull that was based on applied filters.
			</xs:documentation>
		</xs:annotation>
		<xs:complexContent>
			<xs:extension base="common:ListBase">
				<xs:sequence>
					<xs:element name="transferRecurring" type="TransferRecurring" minOccurs="0" maxOccurs="unbounded">
						<xs:annotation>
							<xs:documentation>
								Details related to a specific recurring transfer.
							</xs:documentation>
						</xs:annotation>
					</xs:element>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:complexType name="TransferRecurring" >
		<xs:complexContent>
			<xs:annotation>
				<xs:documentation>
					Single recurring transfer.
				</xs:documentation>
			</xs:annotation>
			<xs:extension base="fundsTransferRecurringBase:FundsTransferRecurringBase">
				<xs:sequence>
					<xs:element name="noteList" type="common:NoteList" minOccurs="0" maxOccurs="1">
						<xs:annotation>
							<xs:documentation>
								List of notes on account, loan, etc..
							</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element name="achPrenoteIndicator" type="common:AchPrenoteIndicator"  minOccurs="0" maxOccurs="1">
						<xs:annotation>
							<xs:documentation>
								ACH Prenote Indicator is set to True when an alert of the transfer will be sent to the receiving institution
								in advance of the actual transfer.   
							</xs:documentation>
						</xs:annotation>
					</xs:element>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
</xs:schema>
