<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema
		targetNamespace="http://cufxstandards.com/Meta.xsd"
		xmlns="http://cufxstandards.com/Meta.xsd"
		xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:common="http://cufxstandards.com/Common.xsd"
		elementFormDefault="qualified"
		attributeFormDefault="unqualified">

  <xsd:import namespace="http://cufxstandards.com/Common.xsd" schemaLocation="Common.xsd" />

  <xsd:complexType name="Meta" abstract="true">
		<xsd:annotation>
			<xsd:documentation>
				For each account type, optional meta information MAY be
				provided with these tags depending upon accountType
				returned
			</xsd:documentation>
		</xsd:annotation>
		<xsd:sequence></xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="LoanMeta">
		<xsd:complexContent>
      <xsd:annotation>
        <xsd:documentation>
          Auto loans, etc. Loans that are NOT line of credit or credit cards.
        </xsd:documentation>
      </xsd:annotation>
			<xsd:extension base="Meta">
				<xsd:sequence>
					<xsd:element name="interestRate" type="xsd:decimal" minOccurs ="0" maxOccurs ="1">
            <xsd:annotation>
              <xsd:documentation>
                Interest Rate Percent of the loan.
                Determines the amount charged each time period
                based on the loan period.
                999.999 (4.500 may be displayed as 4.500% or 4.5% depending on the user interface).
              </xsd:documentation>
            </xsd:annotation>
					</xsd:element>
				  <xsd:element name="maturityDate" type="xsd:date" minOccurs ="0" maxOccurs ="1">
            <xsd:annotation>
              <xsd:documentation>
                The date that the loan must be paid off.
                The date should be ISO 8601 format yyyy-mm-dd (2011-03-28).
              </xsd:documentation>
            </xsd:annotation>
					</xsd:element>
					<xsd:element name="originalBalance" type="common:Money" minOccurs ="0" maxOccurs ="1">
            <xsd:annotation>
              <xsd:documentation>
                Original balance of the loan.  i.e. How much was borrowed.
              </xsd:documentation>
            </xsd:annotation>
          </xsd:element>
					<xsd:element name="minimumPayment" type="common:Money" minOccurs ="0" maxOccurs ="1">
            <xsd:annotation>
              <xsd:documentation>
                The amount due each payment period to keep the loan in good standing.
              </xsd:documentation>
            </xsd:annotation>
					</xsd:element>
					<xsd:element name="currentDueDate" type="xsd:date" minOccurs ="0" maxOccurs ="1">
            <xsd:annotation>
              <xsd:documentation>
                The date that payment is due for the loan to keep in good standing and avoid penalties.
                Many times institutions will institute a grace period beyond this date,
                but this is the published due date.
                The date should be ISO 8601 format yyyy-mm-dd (2011-03-28).
              </xsd:documentation>
            </xsd:annotation>
					</xsd:element>
					<xsd:element name="currentPayoffBalance" type="common:Money" minOccurs ="0" maxOccurs ="1">
            <xsd:annotation>
              <xsd:documentation>
                The Current Payoff Balance represents the amount required to pay off the loan
                at the date/time the request was made.
              </xsd:documentation>
            </xsd:annotation>
          </xsd:element>
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<xsd:complexType name="CheckingSavingsMeta">
		<xsd:complexContent>
			<xsd:extension base="Meta">
				<xsd:sequence>
					<xsd:element name="apy" type="xsd:decimal" minOccurs ="0" maxOccurs ="1">
						<xsd:annotation>
							<xsd:documentation>
                Annual Percentage Yield.
                999.999   (4.500 may be displayed as 4.500% or 4.5% depending on the user interface).
              </xsd:documentation>
						</xsd:annotation>
					</xsd:element>
					<xsd:element name="minimumBalance" type="common:Money" minOccurs ="0" maxOccurs ="1">
						<xsd:annotation>
							<xsd:documentation>
								Minimum required balance
							</xsd:documentation>
						</xsd:annotation>
					</xsd:element>
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

